@page "/"

<PageTitle>Home</PageTitle>



<h1>Hello, Yabsera</h1>

Welcome to your new app.
@if(ShowAlert){
     <div class="alert alert-secondary mt-4" role="alert">
       <span class="oi oi-check mr-2" aria-hidden="true"></span>
      <strong>Blazor is soo cool!</strong>
    </div>
}
    


  

<button @onclick="ToggleAlert" class="btn btn-success">Toggle</button>

@code{
    private bool ShowAlert{get;set;}=true;
    private void ToggleAlert(){
        ShowAlert=!ShowAlert;
        StateHasChanged();
        Console.WriteLine(ShowAlert);
    }
}